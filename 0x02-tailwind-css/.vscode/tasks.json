{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Tailwind CSS Watch",
			"type": "shell",
			"command": "npx",
			"args": [
				"tailwindcss",
				"-i",
				"./src/input.css",
				"-o",
				"./src/output.css",
				"--watch"
			],
			"group": "build",
			"isBackground": true,
			"problemMatcher": []
		}
	]
}